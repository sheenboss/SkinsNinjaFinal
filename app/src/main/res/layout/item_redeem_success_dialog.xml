<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="320dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:background="#26de81"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_success"/>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Success!"/>

            <TextView
                android:id="@+id/dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/myGrayTextLight"
                android:text="Success!"/>

            <TextView
                android:id="@+id/dialog_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Item delivery time is usually 1 hour, maximum up to 24h."/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50">


                <Button
                    android:id="@+id/btn_okay"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_gradient_on"
                    android:text="OK"
                    android:textSize="12dp"
                    android:textColor="#ffffffff" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>